{
    "name": "veewee/happy-helpers",
    "description": "Some happy helpers for your PHP code",
    "type": "library",
    "require-dev": {
        "ext-libxml": "*",
        "ext-dom": "*",
        "vimeo/psalm": "^3.15",
        "phpunit/phpunit": "^9.2",
        "friendsofphp/php-cs-fixer": "^2.16",
        "symfony/finder": "^5.1",
        "phpro/grumphp-shim": "^0.19.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Toon Verwerft",
            "email": "toonverwerft@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "webmozart/assert": "^1.9"
    },
    "suggest": {
        "ext-libxml": "If you want to use the dom functions",
        "ext-dom": "If you want to use the dom functions"
    },
    "autoload": {
        "psr-4": {
            "HappyHelpers\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/marcosh/lamphpda"
        }
    ]
}
